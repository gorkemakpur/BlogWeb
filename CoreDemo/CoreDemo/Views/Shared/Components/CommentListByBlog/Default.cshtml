@model IEnumerable<EntityLayer.Concrete.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>
    @if (Model.Count() == 0)
    {
        <div class="media">
            <div class="media-body">
                <div class="badge badge-warning" style="font-size:25px">
                    Durma İlk Yorumu Sen Yap
                </div>

            </div>
        </div>

    }
    else
    {
        @foreach (var item in Model)
        {

                <div class="media table table-bordered">
                        <img src="~/CoreBlogTema/images/t1.jpg" alt="" class="img-fluid" />

                        <div class="media-body">
                            <h5 class="mt-0">@item.CommentUserName</h5>
                            <p>
                                @item.CommentContent
                            </p>

                        </div>
                        <small style="float:right">@item.CommentDate.ToString("HH:mm dd-MMM-yyyy")</small>
                    </div>

                    }
                    }
                </div>



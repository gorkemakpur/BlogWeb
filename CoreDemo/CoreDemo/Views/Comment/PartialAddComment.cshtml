
<div class="comment-top">
    <h4>Yorum Yap</h4>
    <div class="comment-bottom">
        <form action="#" method="post">

            <input class="form-control" type="text" name="CommentUserName" placeholder="Kullanıcı Adınız" required="" id="txtUserName">
            <input class="form-control" type="text" name="CommentTitle" placeholder="Başlık" required="" id="txtCommentTitle">
            <textarea class="form-control" name="CommentContent" placeholder="Yorumunuz" required="" id="txtCommentContent"></textarea>
            <button type="submit" id="btn" class="btn btn-primary submit">Yorum Yap</button>

        </form>
    </div>
</div>


<script type="text/javascript">
    $("#btn").click(function () {
        let values = {
            CommentUserName: $("#txtUserName").val(),
            CommentTitle: $("#txtCommentTitle").val(),
            CommentContent: $("#txtCommentContent").val()
        };
        $.ajax({
            type: "post",
            url: "/Comment/PartialAddComment",
            data: values,
            success: function (func) {
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

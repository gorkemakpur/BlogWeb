@using EntityLayer.Concrete
@model List<Blog>


@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}


<h1>Yazarın Blogları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.BlogCreateDate.ToString("dd-MMM-yyyy---HH:MM")</td>
            <td>@item.Categories.CategoryName</td>


            <td>
                @if (item.BlogStatus)
                {
                    <span class="badge badge-success">Aktif</span>
                }
                else
                {
                    <span class="badge badge-danger">Pasif</span>
                }
            </td>
            
            
            
            
            <td><a href="#" class="btn btn-info">Detay</a></td>
            <td><a href="#" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Blog/BlogDelete/@item.BlogID" class="btn btn-danger">Sil</a></td>
        </tr>
    }


</table>

<a href="/Blog/BlogAdd" class="btn btn-success">Yeni Blog Oluştur</a>


